{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["resources/scripts/components/*"],
      "@/assets/*": ["resources/scripts/assets/*"],
      "@/hooks/*": ["resources/scripts/hooks/*"],
      "@/contexts/*": ["resources/scripts/contexts/*"],
      "@/lib/*": ["resources/scripts/lib/*"],
      "@/routing/*": ["resources/scripts/routing/*"],
      "@/themes/*": ["resources/scripts/themes/*"]
    }
  },
  "include": [
    "resources/scripts/**/*.ts",
    "resources/scripts/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
